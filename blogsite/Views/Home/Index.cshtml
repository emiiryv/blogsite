@model IEnumerable<blogsite.Models.Blog>

@{
    ViewData["Title"] = "Bloglar";
}

<h2>Bloglar</h2>

<div class="row">
    @foreach (var blog in Model)
    {
        <div class="col-md-4">
            <div class="card">
                <img src="@(blog.ImageUrl ?? "/images/default.jpg")" class="card-img-top" alt="Blog Görseli">
                <div class="card-body">
                    <h5 class="card-title">@blog.Title</h5>
                    <p class="card-text">@blog.Content.Substring(0, Math.Min(blog.Content.Length, 100))...</p>
                    <a href="/Blog/Details/@blog.Id" class="btn btn-primary">Detayları Gör</a>
                </div>
                <div class="card-footer">
                    <small class="text-muted">Kategori: @blog.Category?.Name</small><br>
                    <small class="text-muted">Yayınlanma Tarihi: @blog.CreatedAt.ToString("dd MMM yyyy")</small><br>
                    <small class="text-muted">Yazar: @(blog.CreatedBy ?? "Bilinmiyor")</small>
                </div>
            </div>
        </div>
    }
</div>
