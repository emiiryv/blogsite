@model CategoryViewModel

<h2>Category Details</h2>

<div>
    <h3>Category Name: @Model.Name</h3>
    <p>Category ID: @Model.Id</p>
</div>

<h4>Blog Count by Category</h4>
<table class="table">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Blog Count</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.BlogCounts)
        {
            <tr>
                <td>@item.CategoryName</td>
                <td>@item.BlogCount</td>
            </tr>
        }
    </tbody>
</table>
